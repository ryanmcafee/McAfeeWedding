<div id="contact" class="section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <h2 class="margin-top-0">Contact Us</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="well well-sm well-lg">
          <form id='contactForm' class="form-horizontal" method="post" action="/contact-us">
            <div class="form-group">
              <div class="col-md-1">
                <label>Subject</label>
              </div>
              <div class="col-md-11">
                <input id="subject" name="subject" type="text" placeholder="Subject" class="form-control">
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-1">
                <label>First Name</label>
              </div>
              <div class="col-md-11">
                <input id="firstname" name="firstname" type="text" placeholder="First Name" class="form-control">
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-1">
                <label>Last Name</label>
              </div>
              <div class="col-md-11">
                <input id="lastname" name="lastname" type="text" placeholder="Last Name" class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-1">
                <label>Email</label>
              </div>
              <div class="col-md-11">
                <input id="email" name="email" type="text" placeholder="Email Address" class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-1">
                <label>Phone</label>
              </div>
              <div class="col-md-11">
                <input id="phone" name="phone" type="text" placeholder="Phone" class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-1">
                <label>Message</label>
              </div>
              <div class="col-md-11">
                <textarea class="form-control" id="message" name="message" placeholder="Go ahead...Send us a message!" rows="7"></textarea>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-9 col-md-offset-3">
                <div id="messages"></div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
